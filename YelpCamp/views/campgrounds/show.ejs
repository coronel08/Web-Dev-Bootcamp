<% layout('layouts/boilerplate') %>

  <div class="row">
    <div class="col-6 offset-3">
      <div class="card">
        <img src="<%= campground.image %>" class="card-img-top mh-25" alt="...">
        <div class="card-body">
          <h5 class="card-title">
            <%= campground.title %> Campground
          </h5>
          <p class="card-text"><span class="text-muted">Campground Description: </span>
            <%= campground.description %>
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Location: <%= campground.location %>
          </li>
          <li class="list-group-item">Price: $<%= campground.price %>
          </li>
        </ul>
        <div class="card-body">
          <a href="/campgrounds" class="card-link btn btn-info">All Campgrounds</a>
          <a href="/campgrounds/<%=campground._id%>/edit" class="card-link btn btn-success">Edit Campground</a>
          <!-- Form with override method to delete -->
          <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
        <div class="card-footer text-muted">Card footer</div>
      </div>
      <form action="/">
        <div class="my-3">
          <label class="form-label" for="rating">Rating</label>
          <input class="form-range" type="range" name="review[rating]" id="rating" min="1" max="5">
        </div>
        <div class="mb-3">
          <label class="form-label" for="body">Review</label>
          <textarea class="form-control" name="review[body]" id="body" cols="30" rows="10"></textarea>
        </div>
        <button class="btn btn-success mb-1">Submit Review</button>
      </form>
    </div>
  </div>

  <body>

  </body>

  </html>