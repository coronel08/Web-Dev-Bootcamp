<% layout('layouts/boilerplate') %> 
<body class="row">
    <h1 class="text-center">Edit Venue</h1>
    <div class="col-10 offset-1">
        <!-- Use method-override to PUT -->
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" class="validated-form" enctype="multipart/form-data"  novalidate>
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" value="<%=campground.title%>" required>
                </div>
                <div class="mb-3 col-md-6">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" value="<%=campground.location%>" required>
                </div>
            </div>

            <div class="row">
                <div class="mb-3 col-md-10">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" name="campground[description]" id="description" type="text" rows="3"><%=campground.description%></textarea>
                </div>
                <div class="mb-2 col-md-2">
                    <label class="form-label" for="price">Price</label>
                    <input class="form-control" type="number" id="price" name="campground[price]" value="<%=campground.price%>" required>
                </div>
            </div>

            <div class="form-file custom-file mb-3">
                <label class="form-file-label custom-file-label" for="image">Add Images</label>
                <input class="form-control form-file-input" type="file" id="image" name="campground[image]" multiple>
            </div>

            <div class="mb-3 row">
                <% campground.images.forEach(function(img, i) { %>
                    <div class="col-md-3 card">
                        <img src="<%= img.url %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <label for="image <%= i %>"> Delete?</label>
                            <input type="checkbox" id="image <%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                        </div>
                    </div>
                <% }) %>  
            </div>

            <button class="btn btn-primary">Submit Campground</button>
        </form>
        <a class="btn btn-success my-3" href="/campgrounds/<%=campground._id%> ">Back to Campgrounds</a>
    </div>
</body>
</html>